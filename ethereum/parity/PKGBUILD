# shellcheck disable=SC2034,SC2154,SC2164
pkgname=('parity')
_srcname='openethereum'
pkgdesc='Fast, light, robust Ethereum implementation'
pkgver='2.7.2'
_commit='2662d1925ec794f3ad7c5759b2412ff5128d259b'
pkgrel='1'
arch=('i686' 'x86_64')
url="https://github.com/openethereum/${_srcname}"
license=('GPL3')

depends=('gcc-libs')
makedepends=('git' 'rust' 'clang' 'cmake')

source=("${_srcname}::git+${url}.git#commit=${_commit}")
sha512sums=('SKIP')

build() {
    cd "${srcdir}/${_srcname}"

    export CARGO_HOME="${srcdir}/cargo"
    cargo build --release --features final
}

package() {
    cd "${srcdir}/${_srcname}"

    install -D --mode=755 target/release/parity "${pkgdir}/usr/bin/parity"
    install -D --mode=644 LICENSE "${pkgdir}/usr/share/licences/${pkgname[0]%-git}/LICENSE"
}
